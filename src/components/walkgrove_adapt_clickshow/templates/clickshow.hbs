<div class="component__inner clickshow__inner">
  {{> component this}} 

  <div class="clickshow__main {{#if_eq _layoutPosition "column"}}column{{/if_eq}} {{_styling._item-wrap}}" >
  {{#each _items}}
    <div class="clickshow__widget {{#if_eq ../_layoutPosition "column"}}column{{/if_eq}} {{#if ../_styling._item-background-color}}js-clickshow-item{{/if}}" style="background-color: {{../_styling._item-background-color}}; min-width: {{../_styling._item-width}};max-width: {{../_styling._item-width}};" data-index="{{@index}}">
      <div class="clickshow__item left js-clickshow-image {{#if_eq ../_flexLayout "column"}}column{{/if_eq}}" style="width: {{../_styling._left-width}}">
        <button role="button" aria-pressed="false" tabindex="0" style="color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}};">
          {{#if_eq ../_layoutType "image"}}
          <img class="graphic" src="{{{leftGraphic}}}" aria-label="{{{leftAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}}; padding: {{../_styling._left-padding}};" />
          {{#if leftGraphicHover}}<img class="graphic-hover" src="{{{leftGraphicHover}}}" aria-label="{{{leftAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}}; padding: {{../_styling._left-padding}};" />{{/if}}
          {{/if_eq}}
          {{#if_eq ../_layoutType "image-text"}}
          <img class="graphic" src="{{{leftGraphic}}}" aria-label="{{{leftAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}}; padding: {{../_styling._left-padding}};"/>
          {{#if leftGraphicHover}}<img class="graphic-hover" src="{{{leftGraphicHover}}}" aria-label="{{{leftAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}}; padding: {{../_styling._left-padding}};" />{{/if}}
          {{/if_eq}}
          {{#if_eq ../_layoutType "text"}}
          <div class="text" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}}; padding: {{../_styling._left-padding}};">{{{leftText}}}</div>
          {{/if_eq}}
          {{#if_eq ../_layoutType "text-image"}}
          <div class="text" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._left-font-color}}; background-color: {{../_styling._left-background-color}}; padding: {{../_styling._left-padding}};">{{{leftText}}}</div>
          {{/if_eq}}
        </button>
      </div>
       <div class="clickshow__item right {{#if_eq ../_layoutPosition "column"}}column{{/if_eq}} {{#if_eq ../_hideRightContent false}}show{{/if_eq}} ">
        {{#if_eq ../_layoutType "image"}}
        <img class="graphic" src="{{{rightGraphic}}}" aria-label="{{{rightAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._right-font-color}}; background-color: {{../_styling._right-background-color}}; padding: {{../_styling._right-padding}};" />
        {{#if rightGraphicHover}}<img class="graphic-hover" src="{{{rightGraphicHover}}}" aria-label="{{{rightAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._right-font-color}}; background-color: {{../_styling._right-background-color}}; padding: {{../_styling._right-padding}};" />{{/if}}
        {{/if_eq}}
        {{#if_eq ../_layoutType "text-image"}}
        <img class="graphic" src="{{{rightGraphic}}}" aria-label="{{{rightAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._right-font-color}}; background-color: {{../_styling._right-background-color}}; padding: {{../_styling._right-padding}};" />
        {{#if rightGraphicHover}}<img class="graphic-hover" src="{{{rightGraphicHover}}}" aria-label="{{{rightAlt}}}" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._right-font-color}}; background-color: {{../_styling._right-background-color}}; padding: {{../_styling._right-padding}};" />{{/if}}
        {{/if_eq}}
        {{#if_eq ../_layoutType "text"}}
        <div class="text" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._right-font-color}}; background-color: {{../_styling._right-background-color}}; padding: {{../_styling._right-padding}};">{{{rightText}}}</div>
        {{/if_eq}}
        {{#if_eq ../_layoutType "image-text"}}
        <div class="text" style="object-fit: {{../_styling._graphic}}; color: {{../_styling._right-font-color}}; background-color: {{../_styling._right-background-color}}; padding: {{../_styling._right-padding}};"">{{{rightText}}}</div>
        {{/if_eq}}
      </div>
    </div>
  {{/each}}
  </div> 
  
  {{!--  --}}

</div>
