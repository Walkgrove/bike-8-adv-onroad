{{import_globals}}

<div class="menu-item__inner hotspotmenu-item__inner" style="top:{{_position._top}};left:{{_position._left}};width:{{_position._width}};height:{{_position._height}};" >

  {{#if _graphic.src}}
  <div class="menu-item__image-container hotspotmenu-item__image-container">
    <img class="menu-item__image hotspotmenu-item__image" src="{{_graphic.src}}" {{#if _graphic.alt}}aria-label="{{_graphic.alt}}" {{else}}alt="" aria-hidden="true"{{/if}} />
    <img class="menu-item__image hotspotmenu-item__image-mobile" src="{{_graphic.src_mobile}}" {{#if _graphic.alt}}aria-label="{{_graphic.alt}}" {{else}}alt="" aria-hidden="true"{{/if}} />
  </div>
  {{/if}}

  <div class="menu-item__details hotspotmenu-item__details">
    <div class="menu-item__details-inner hotspotmenu-item__details-inner">

      {{#if displayTitle}}
      <div class="menu-item__title hotspotmenu-item__title">
        <div class="js-heading" data-a11y-heading-type="menuItem"></div>

        <div class="menu-item__title-inner hotspotmenu-item__title-inner accessible-text-block">
          {{{compile displayTitle}}}
        </div>
      </div>
      {{/if}}

      {{#if _graphic.alt}}{{a11y_aria_image _graphic.alt}}{{/if}}

      {{#if body}}
      <div class="menu-item__body hotspotmenu-item__body">
        <div class="menu-item__body-inner hotspotmenu-item__body-inner" >
          {{{compile body}}}
        </div>
      </div>
      {{/if}}

      {{#if duration}}
      <div class="menu-item__duration hotspotmenu-item__duration">
        <div class="menu-item__duration-inner hotspotmenu-item__duration-inner">
          {{#if _globals._menu._hotspotmenu.durationLabel}}{{{_globals._menu._hotspotmenu.durationLabel}}}{{/if}} {{{duration}}}
        </div>
      </div>
      {{/if}}

      <div class="menu-item__progress hotspotmenu-item__progress js-menu-item-progress">
        {{!-- Menu item progress bar will render in here --}}
      </div>

      <div class="menu-item__button-container hotspotmenu-item__button-container">
        <button class="btn-text menu-item__button hotspotmenu-item__button js-btn-click{{#if _isVisited}} is-visited{{/if}}{{#if _isLocked}} is-locked{{/if}}" aria-label="{{#if _isVisited}}{{_globals._accessibility._ariaLabels.visited}}{{/if}} {{linkText}}"{{#if _isLocked}} disabled="disabled"{{/if}} tabindex="0">
          {{{linkText}}}
        </button>
      </div>

    </div>
  </div>


</div>
