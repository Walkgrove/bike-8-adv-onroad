<div class="component__inner graphicbuild__inner">
  {{> component this}} 

  <div class="graphicbuild__main">

   {{#if _graphic}}<img src="{{_graphic.src}}" class="graphicbuild__item-bg-graphic" {{#if _graphic.alt}}aria-label="{{_graphic.alt}}"{{else}}aria-hidden="true" alt=""{{/if}} />{{/if}} 
   {{#if content}}<div class="graphicbuild__item-content">{{{content}}}</div>{{/if}}

    {{#each _items}}
    <div class="graphicbuild__widget" data-index="{{@index}}">
      {{#if _graphic}}<img src="{{_graphic.src}}" class="graphicbuild__item-graphic" {{#if _graphic.alt}}aria-label="{{_graphic.alt}}"{{else}}aria-hidden="true" alt=""{{/if}} />{{/if}}
      {{#if content}}<div class="graphicbuild__item-content">{{{content}}}</div>{{/if}}
    </div>
    {{/each}}

    <button class="btn-icon graphicbuild__btn js-graphicbuild-prev-click is-hidden" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
      <div class="icon"></div>
    </button>
    
    <button class="btn-icon graphicbuild__btn js-graphicbuild-click" aria-label="{{_globals._accessibility._ariaLabels.next}}">
      <div class="icon"></div>
    </button>

    <button class="btn-icon graphicbuild__btn js-click-reset is-hidden" aria-label="{{_globals._accessibility._ariaLabels.reset}}">
      <div class="icon"></div>
    </button>

  </div>

</div>
